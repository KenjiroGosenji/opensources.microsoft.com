using System;

public class Player
{
    public string Name { get; set; }
    public int Level { get; set; }
    public int Health { get; set; }
    public int AttackDamage { get; set; }

    public Player(string name, int level, int health, int attackDamage)
    {
        Name = name;
        Level = level;
        Health = health;
        AttackDamage = attackDamage;
    }

    public void Attack(Player target)
    {
        int damageDealt = AttackDamage;
        Console.WriteLine($"{Name} attacks {target.Name} for {damageDealt} damage!");
        target.Health -= damageDealt;
        if (target.Health <= 0)
        {
            Console.WriteLine($"{target.Name} has been defeated!");
        }
    }
}

class Program
{
    static void Main()
    {
        Player player1 = new Player("Player 1", 1, 100, 10);
        Player player2 = new Player("Player 2", 1, 100, 10);

        while (player1.Health > 0 && player2.Health > 0)
        {
            player1.Attack(player2);
            player2.Attack(player1);
        }

        Console.ReadLine();
    }
}
