using System;
using System.Collections.Generic;

namespace MissionImpossible
{
    public class Player
    {
        public string Name { get; set; }
        public int Level { get; set; }
        public int Health { get; set; }
        public List<Item> Inventory { get; set; }

        public Player(string name)
        {
            Name = name;
            Level = 1;
            Health = 100;
            Inventory = new List<Item>();
        }

        public void Attack(Enemy enemy)
        {
            // Code for player attacking an enemy
        }

        public void UseItem(Item item)
        {
            // Code for player using an item from their inventory
        }
    }

    public class Enemy
    {
        public string Name { get; set; }
        public int Level { get; set; }
        public int Health { get; set; }

        public Enemy(string name, int level)
        {
            Name = name;
            Level = level;
            Health = level * 100;
        }

        public void TakeDamage(int damage)
        {
            Health -= damage;
            if (Health <= 0)
            {
                // Code for enemy being defeated
            }
        }
    }

    public class Item
    {
        public string Name { get; set; }
        public int HealthBonus { get; set; }

        public Item(string name, int healthBonus)
        {
            Name = name;
            HealthBonus = healthBonus;
        }
    }

    class Program
    {
        static void Main(string[] args)
        {
            Player player = new Player("Ethan Hunt");
            Enemy enemy = new Enemy("Villain", 5);

            player.Attack(enemy);

            Item healthKit = new Item("Health Kit", 20);
            player.UseItem(healthKit);
        }
    }
}
