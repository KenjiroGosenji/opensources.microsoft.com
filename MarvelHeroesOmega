using UnityEngine;

public class CharacterController : MonoBehaviour
{
    public float speed = 5.0f; // The movement speed of the character
    public float rotationSpeed = 180.0f; // The rotation speed of the character
    private Vector3 moveDirection = Vector3.zero;

    void Update()
    {
        // Get the horizontal and vertical input from the player
        float horizontalInput = Input.GetAxis("Horizontal");
        float verticalInput = Input.GetAxis("Vertical");

        // Calculate the movement direction based on the input and the character's transform
        moveDirection = new Vector3(horizontalInput, 0.0f, verticalInput);
        moveDirection = transform.TransformDirection(moveDirection);
        moveDirection *= speed;

        // Rotate the character to face the movement direction
        if (moveDirection != Vector3.zero)
        {
            Quaternion targetRotation = Quaternion.LookRotation(moveDirection);
            transform.rotation = Quaternion.RotateTowards(transform.rotation, targetRotation, rotationSpeed * Time.deltaTime);
        }

        // Move the character based on the movement direction
        CharacterController characterController = GetComponent<CharacterController>();
        characterController.Move(moveDirection * Time.deltaTime);
    }
}
