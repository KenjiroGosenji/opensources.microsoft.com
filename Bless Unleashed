using System;

public class Player
{
    private string name;
    private int level;
    private int health;

    public Player(string playerName)
    {
        name = playerName;
        level = 1;
        health = 100;
    }

    public void LevelUp()
    {
        level++;
        health += 20;
    }

    public void TakeDamage(int damage)
    {
        health -= damage;
        if (health <= 0)
        {
            Die();
        }
    }

    private void Die()
    {
        Console.WriteLine(name + " has died.");
        Respawn();
    }

    private void Respawn()
    {
        health = 100;
        Console.WriteLine(name + " has respawned with full health.");
    }
}

class Program
{
    static void Main()
    {
        Player player1 = new Player("Player1");

        Console.WriteLine(player1.name + " has joined the game.");
        Console.WriteLine(player1.name + " is level " + player1.level + " with " + player1.health + " health.");

        player1.TakeDamage(50);
        Console.WriteLine(player1.name + " took damage. Health is now " + player1.health);

        player1.LevelUp();
        Console.WriteLine(player1.name + " leveled up! Health is now " + player1.health);

        player1.TakeDamage(150);
    }
}
